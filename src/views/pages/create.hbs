<main class="main-create-edit container">
  <h2 class="titulo-seccion">CREAR NUEVO ITEM</h2>
  <form
    action="/admin/create"
    class="form-item"
    method="post"
    enctype="multipart/form-data"
  >
    <div class="cont-categ-licencia">
      <div>
        <label for="category" class="form-label">Categoria</label>
        <select name="category" id="" class="select-form">
          <option value="1">Figuras Coleccionables</option>
          <option value="2">Llaveros</option>
          <option value="3">Remeras</option>
        </select>
      </div>
      <div>
        <label for="licence" class="form-label">Licencia</label>
        <select name="licence" id="" class="select-form">
          <option value="1">Pokemon</option>
          <option value="2">Star Wars</option>
          <option value="3">Harry Potter</option>
        </select>

      </div>
    </div>
    <div>
      <label for="itemName" class="form-label">Nombre del producto:</label>
      <input
        type="text"
        name="itemName"
        id=""
        class="form-input"
        placeholder="Kakashi Hatake Shippuden Saga"
      />
    </div>
    <textarea
      name="description"
      id=""
      cols="30"
      rows="10"
      placeholder="Descripción del producto"
    ></textarea>
    <div class="cont-sku-precio-stock">
      <label for="sku" class="form-label">SKU:</label>
      <input
        type="text"
        name="sku"
        id=""
        class="form-input"
        placeholder="SSK111AB001"
      />
      <label for="precio" class="form-label">Precio:</label>
      <input
        type="number"
        name="price"
        class="form-input"
        placeholder="$0.000,00"
      />
      <label for="stock" class="form-label">Stock:</label>
      <input type="number" name="stock" class="input-stock" placeholder="0" />
    </div>
    <div class="cont-desc-cuotas">
      <label for="discount" class="form-label">Descuento:</label>
      <input
        type="number"
        name="discount"
        id=""
        class="form-input input-desc"
        placeholder="0%"
      />
      <label for="cuotas" class="form-label">Cuotas</label>
      <select name="dues" id="" class="select-form">
        <option value="3">3 Cuotas sin interés</option>
        <option value="2">2 Cuotas sin interés</option>
        <option value="1">1 Cuota sin interés</option>
      </select>

    </div>
    <div>
      <label for="imagenes" class="form-label">Imágenes:</label>
      <input
        type="file"
        name="images"
        id="images"
        class="input-imagenes"
        multiple
      />
    </div>
    <div>
      <button class="btn-form" type="submit">Agregar Producto</button>
      <button class="btn-form">Limpiar</button>
    </div>

  </form>
</main>