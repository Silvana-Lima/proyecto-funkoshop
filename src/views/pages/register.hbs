  <form action="" class="form-registro">
    <label for="nombre">Nombre</label>
    <input
      type="text"
      name="nombre"
      id=""
      class="form-input"
      placeholder="John"
    />
    <label for="apellido">Apellido</label>
    <input
      type="text"
      name="apellido"
      id=""
      class="form-input"
      placeholder="Doe"
    />
